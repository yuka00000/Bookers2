<div class="container">
  <div class="row">
    <%= render 'books/list', book: @book, user: @user %>
    <div class="col-md-8 pt-3 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_image(80, 80) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id), class: 'show' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>